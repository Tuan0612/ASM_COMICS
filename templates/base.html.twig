<script>
    // Khi tài liệu đã sẵn sàng
    document.addEventListener("DOMContentLoaded", function() {
        // Lấy thanh navbar
        var navbar = document.querySelector(".navbar-container");

        // Theo dõi sự kiện cuộn chuột
        window.addEventListener("scroll", function() {
            // Nếu cuộn chuột xuống một khoảng cách lớn hơn hoặc bằng 50px
            if (window.scrollY >= 50) {
                // Thêm lớp "navbar-scrolled" để thay đổi màu nền và hiển thị phía trên
                navbar.classList.add("navbar-scrolled");
            } else {
                // Nếu cuộn chuột lên trở lại, loại bỏ lớp "navbar-scrolled"
                navbar.classList.remove("navbar-scrolled");
            }
        });
    });

</script>
